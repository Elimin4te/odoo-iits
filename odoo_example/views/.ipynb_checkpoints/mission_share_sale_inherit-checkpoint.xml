<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record model="ir.ui.view" id="share_sales_inherit_form">
            <field name="name">sale.order.form.inherit.share</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="is_share"/>
                    <field name="mission_id" attrs="{'invisible':[('is_share','=',False)]}"/>
                </xpath>
                <xpath expr="//sheet//notebook" position="inside">
                    <page string="Crewmates" attrs="{'invisible':[('is_share','=',False)]}">
                        <field name="crewmates_id">
                            <tree>
                                <field name="full_name"/>
                                <field name="role"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>