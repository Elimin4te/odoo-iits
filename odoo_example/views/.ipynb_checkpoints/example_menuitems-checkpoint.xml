<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="example_list_crewmates_action">
            <field name="name">Crewmates</field>
            <field name="res_model">example.crewmates</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type='html'>
                <p class="o_view_nocontent_smiley_face">
                    Register the crewmates that will be elegible for missions here!
                </p>
            </field>
        </record>
        
         <record model="ir.actions.act_window" id="example_list_missions_action">
            <field name="name">List</field>
            <field name="res_model">example.missions</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type='html'>
                <p class="o_view_nocontent_smiley_face">
                    Create the Missions here!
                </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="example_list_shares_action">
            <field name="name">Shares</field>
            <field name="res_model">mission.shares</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="help" type='html'>
                <p class="o_view_nocontent_smiley_face">
                    Create the Mission Shares here!
                </p>
            </field>
        </record>
        
        <menuitem name="SpaceMission" id="space_mission_main" sequence='1'/>
        <menuitem name="SpaceMission" id="space_mission_main_sub" sequence='2'/>
        
        <menuitem name="Missions List" id="space_mission_missions_list" parent="space_mission_main_sub" sequence='4' action="example_list_missions_action"/>
        <menuitem name="Mission Shares" id="space_mission_missions_shares" parent="space_mission_main_sub" sequence='5' action="example_list_shares_action"/>
        
        <menuitem name="Crewmates" id="space_mission_crewmates" parent="space_mission_main_sub" sequence='6' action="example_list_crewmates_action"/>
        
    </data>
</odoo>