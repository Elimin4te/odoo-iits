<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="example_list_crewmates_action">
            <field name="name">Crewmates</field>
            <field name="res_model">example.crewmates</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type='html'>
                <p class="o_view_nocontent_smiley_face">
                    Register the crewmates that will be elegible for missions here!
                </p>
            </field>
        </record>
        
         <record model="ir.actions.act_window" id="example_list_missions_action">
            <field name="name">Missions</field>
            <field name="res_model">example.missions</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type='html'>
                <p class="o_view_nocontent_smiley_face">
                    Create the Missions here!
                </p>
            </field>
        </record>
        
        <menuitem name="SpaceMission" id="space_mission" sequence='1'/>
        <menuitem name="SpaceMission" id="space_mission_sub" parent="space_mission" sequence='2'/>
        <menuitem name="Crewmates" id="space_mission_crewmates" parent="space_mission_sub" sequence='3' action="example_list_crewmates_action"/>
        <menuitem name="Missions" id="space_mission_missions" parent="space_mission_sub" sequence='4' action="example_list_missions_action"/>
        
    </data>
</odoo>