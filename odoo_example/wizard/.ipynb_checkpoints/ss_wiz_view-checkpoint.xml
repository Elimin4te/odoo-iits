<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record model="ir.ui.view" id="share_sale_wizard_form_view">
            <field name="name">mission.shares.sale.wizard.form</field>
            <field name="model">mission.shares.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Share Sale Order">
                    <group>
                        <field name="share_id"/>
                        <field name="investors" invisible="1"/>
                        <field name="qty"/>
                        <field name="buyers"/>
                    </group>
                    <footer>
                        <button name="create_sale_order" type="object" string="Create" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="launch_sale_wiz">
            <field name="name">Create Sale Order</field>
            <field name="res_model">mission.shares.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_mission_shares"/>
        </record>
        
    </data>
</odoo>